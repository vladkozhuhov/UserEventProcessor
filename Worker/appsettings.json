{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.Hosting.Lifetime": "Information",
      "Confluent.Kafka": "Warning"
    }
  },
  "Kafka": {
    "BootstrapServers": "localhost:9092",
    "Topic": "user-events",
    "GroupId": "user-event-processor-group",
    "EnableAutoCommit": false,
    "AutoCommitIntervalMs": 5000,
    "AutoOffsetReset": "earliest",
    "SessionTimeoutMs": 45000,
    "MaxPollIntervalMs": 300000
  },
  "PostgreSQL": {
    "ConnectionString": "Host=localhost;Port=5432;Database=usereventdb;Username=postgres;Password=postgres",
    "CommandTimeout": 30,
    "MaxRetryCount": 3,
    "RetryDelaySeconds": 2
  },
  "EventProcessing": {
    "FlushIntervalSeconds": 10
  }
}
